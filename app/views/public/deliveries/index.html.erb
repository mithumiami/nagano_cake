<div>
  <div>
      <h4>配送先登録/一覧</h4>

        <%= form_with model: @delivery, local:true do |f| %>

          <label>郵便番号</label>
          <%= f.text_field :postal_code %>

          <label>住所</label>
          <%= f.text_field :address %>

          <label>宛名</label>
          <%= f.text_field :name %>

          <%= f.submit '新規登録' %>

        <% end %>
    </div>

    <div>
      <table class = "delivery-table">
        <% @deliveries.each do |delivery| %>
            <tr>
              <thead>
                <tr>
                  <th>郵便番号</th>
                  <th>住所</th>
                  <th>宛名</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <tr>
                  <td><%= delivery.postal_code %></td>
                  <td><%= delivery.address %></td>
                  <td><%= delivery.name %></td>
                  <td><%= link_to "編集する", edit_delivery_path(delivery.id), class: 'btn btn-success'  %>
                      <%= link_to "削除する", delivery_path(delivery.id), method: :delete,"data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
                </tr>
              </tbody>
            </tr>
          <% end %>
      </table>

    </div>

  </div>


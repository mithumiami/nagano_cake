
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">


          <h4 class="my-3 ml-3">注文履歴一覧</h4>



          <table class="table">
            <thead>
              <tr>

                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>注文詳細</th>

              </tr>
            </thead>

            <tbody>
            <% order.order_details.each do |order_detail| %>
                <tr>
                    <div class="product-item">
                      <section class="order">

                        <td><u class="order-date"><%= order.updated_at %><u>
                        </td>

                        <td><u class="order-delivery">〒<%= order.postal_code %><br />
                        <%= order.address %><br />
                        <%= order.name %>
                        </u></td>

                        <td><u class="order-price"><%= @sum+@shipping_cost %>円</u></td>

                         <td><u class="order-show"></u><%= link_to "表示する", class: 'btn btn-primary' %></td>


                      </section>

                    </div>

                </tr>
              </tbody>
              <% end %>
          </table>

      </div>
    </div>
  </div>
<h4>ショッピングカート</h4>

<table>
   <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
          <div class="cart-item">
            <section class="cart-text">

              <td><%= cart_item.product %></td>

              <td><%= cart_item.product.with_tax_price %></td>

              <td>"cart-amount"><%= cart_item.amount %></td>

              <td><%= cart_item.item.subtotal %></td>

               <% @合計金額 +=  cart_item.cart_item.subtotal %>

            </section>
          </div>
        </tr>
     <% end %>
  </tbody>
</table>
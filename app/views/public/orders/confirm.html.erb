<h4>注文情報確認</h4>

<table>
   <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
          <div class="cart-item">
            <section class="cart-text">

              <td><%= cart_item.product.title %></td>

              <td><%= cart_item.product.with_tax_price %></td>

              <td><%= cart_item.amount %></td>



              <td><%= cart_item.subtotal %></td>
               <% @sum +=  cart_item.subtotal %>
            </section>
          </div>
        </tr>
     <% end %>

  </tbody>
</table>

<table>
  <tr>
    <td>送料</td>
    <td><%= @shipping_cost %></td>
  </tr>

   <tr>
    <td>商品合計</td>
    <td><%= @sum %></td>
  </tr>

   <tr>
    <td>請求金額</td>
    <td><%= @sum+@shipping_cost %></td>
  </tr>

</table>

<p>支払方法</p>
<%= @order.payment_method_i18n %>
<p>お届け先</p>
〒<%= @order.postal_code %><%= @order.address %><br />
<%= @order.name %>

 <%= form_with model: @order, url: thanks_path, method: :get, local: true do |f| %>
 <%= f.submit "注文を確定する"%>
 <% end %>
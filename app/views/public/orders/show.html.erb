 <p id="notice"></p>
<div class="container">
  <div class="row">
  <div class= "col-md-8">
        <h4>注文履歴詳細</h4>


        <p>注文情報</p>
          <table class= "table table-bordered">
            <tr>
              <td>注文日</td>
              <td><%= @order.updated_at %></td>
            </tr>

            <tr>
              <td>配送先</td>
              <td>〒<%= @order.postal_code %><br />
                  <%= @order.address %><br />
                  <%= @order.name %></td>
            </tr>

            <tr>
              <td>支払方法</td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>

          </table>
        </div>

      <div class ="col-md-4">
        <p>請求情報</p>
          <table class= "table table-bordered">
            <tr>
              <td>商品合計</td>
              <td></td>
            </tr>

            <tr>
              <td>配送料</td>
              <td><%= @shipping_cost %></td>
            </tr>

            <tr>
              <td>ご請求額</td>
              <td><%= @order.total_paymant %></td>
            </tr>


          </table>
        </div>


      <div class= "col-12">
        <p>注文内容</p>
          <table class = "table table-bordered">
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>

             <td><u class="order-products"><% @order.order_details.each do |order_detail| %>
            　<tr>
            　　<td><%= order_detail.product.title %></td>
                <td><%= (order_detail.product.price*1.1).floor %></td>
                <td><%= order_detail.amount %></td>
                <td><%= (order_detail.amount*order_detail.product.price*1.1).floor %></td>
              </tr>

            <% end %></u></td>

          </table>

 <p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0 mx-auto ">

      <h4>新規会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

          <table>
              <tr>
                <td>名前</td>
                <td class="field">
                <%= f.label :last_name, "（姓）" %>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "令和" %>


                <td class="field">
                  <%= f.label :first_name, "（名）" %>
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "道子" %>
                </td>
              </tr>

              <tr>
                <td>フリガナ</td>
                <td class="field">
                  <%= f.label :last_name_kana, "（セイ）" %>
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "レイワ" %>
                </td>

                <td class="field">
                  <%= f.label :first_name_kana, "（メイ）" %>
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "ミチコ" %>
                </td>
              </tr>

              <tr>
                <div class="field">
                  <td><%= f.label :email, "メールアドレス" %></td>
                  <td><%= f.text_field :email, autofocus: true, autocomplete: "メールアドレス" %></td>
                </div>
              </tr>

              <tr>
                <div class="field">
                  <td><%= f.label :postal_code, "郵便番号" %></td>
                  <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "0000000" %></td>
              </div>
              </tr>

              <tr>
                <div class="field">
                  <td><%= f.label :address, "住所" %></td>
                  <td><%= f.text_field :address, autofocus: true, autocomplete: "住所" %></td>
                </div>
              </tr>

              <tr>
              <div class="field">
                <td><%= f.label :telephone_number, "電話番号（ハイフンなし）" %></td>
                <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "電話番号（ハイフンなし）" %></td>
              </div>
              </tr>


              <tr>
                <div class="field">
                  <td><%= f.label :password, "パスワード" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %></td>
                  <td><%= f.password_field :password, autocomplete: "パスワード（6文字以上）" %>
                  </td>
                </div>
              </tr>

              <tr>
                <div class="field">
                  <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
                  <td><%= f.password_field :password_confirmation, autocomplete: "パスワード（確認用）" %>
                  </td>
                </div>
              </tr>
          </table>

              <div class="actions">
                <%= f.submit "新規登録", class: 'btn btn-success' %>
              </div>
            <% end %>

          </br><h6>既に登録済みの方<h6>

            <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>


            <%= render "customers/shared/links" %>
      </div>
    </div>
  </div>

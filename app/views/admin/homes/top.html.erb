<h4>注文履歴一覧（top page）</h4>

<table>
   <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>


<% @orders.each do |order| %>
      <tr>
          <div class="customer-item">
            <section class="customer-text">

              <td><%= link_to order.updated_at, edit_admin_order_path(order.id) %></td>

              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>





            </section>
          </div>
        </tr>
     <% end %>

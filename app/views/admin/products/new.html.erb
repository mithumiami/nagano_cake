<h3>新規登録</h3>

<%= form_with model: @product, url: admin_products_path, local:true do |f| %>

  <h4>商品画像</h4>
  <%= f.attachment_field :image %>


  <h4>商品名</h4>
  <%= f.text_field :title %>

  <h4>商品説明</h4>
  <%= f.text_area :body %>

   <h4>商品価格</h4>
  <div><%= f.text_field :price %>円</div><br />

  <%= f.submit '新規登録' %>

<% end %>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">



        <h4>新規登録</h4>

        <%= form_with model: @product, url: admin_products_path, local:true do |f| %>

          <div class="form-group">
            <label>商品画像</label>
            <%= f.attachment_field :image %>
          </div>

          <div class="form-group">
            <label>商品名</label>
            <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <label>商品説明</h4>
            <%= f.text_area :body %>
          </div>

          <div class="form-group">
            <label>商品価格</label>
            <div><%= f.text_field :price %>円</div>
          </div>

            <%= f.submit '新規登録' %>

      </div>
    </div>
  </div>

  <% end %>
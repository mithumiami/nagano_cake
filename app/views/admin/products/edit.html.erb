<h2>商品名編集</h2>
        <%= form_with model: @product, url: admin_product_path(@product.id),local: true do |f| %>
        　<h4>商品画像</h4>
        　 <%= f.attachment_field :image %>

          <h4>商品名</h4>
            <%= f.text_field :title %>

          <h4>商品説明</h4>
            <%= f.text_area :body %>

          <h4>税抜価格</h4>
            <div><%= f.text_field :price %>円</div>



            <%= f.submit '変更を保存' %>
        <% end %>

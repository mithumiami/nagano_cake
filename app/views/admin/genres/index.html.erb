<h1>ジャンル一覧</h1>

<table>
  <% @genres.each do |genre| %>
      <tr>
          <div class="genre-item">
            <section class="genre-text">

              <td><h3 class="genre-heading"><%= genre.title %></h3></td>

              <td><%= link_to "Edit", edit_admin_genre_path(genre.id) %></td>

            </section>

          </div>
        <% end %>
      </tr>
</table>

<h3>新規登録</h3>

<%= form_with model: @genre, local:true do |f| %>

  <h4>ジャンル名</h4>
  <%= f.text_field :title %>

  <%= f.submit '新規登録', class: 'btn btn-success' %>

<% end %>
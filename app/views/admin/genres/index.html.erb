<h1>GENRES</h1>

<h3>ケーキ</h3>
<h3>プリン</h3>
<h3>焼き菓子</h3>
<h3>キャンディ</h3>
<% @genres.each do |genre| %>
        <div class="genre-item">
          <section class="genre-text">

            <h3 class="genre-heading"><%= genre.title %></h3>

            <%= link_to "Edit", edit_admin_genre_path(genre.id) %>

          </section>
        </div>
      <% end %>


<h3>New Genres</h3>

<%= form_with model:@genre, local:true do |f| %>

  <h4>Genre</h4>
  <%= f.text_field :title %>

  <%= f.submit 'New Genre' %>

<% end %>